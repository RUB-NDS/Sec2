                                    <include>org.sec2.saml:*</include>
                                    <include>org.sec2.saml.client:*</include>
                                    <include>org.slf4j:slf4j-api</include>
                                    <include>commons-codec:*</include>
                                    <include>org.sec2.securityprovider:*</include>
                                    <include>com.madgag:scprov-jdk15on</include>
                                    <include>org.simpleframework:simple-xml</include>
                                    <include>stax:*</include>
                                    <include>xpp3:xpp3</include>
                                    <include>xerces:xercesImpl</include>
                                    <include>xml-apis:xml-apis</include>
                                    <include>org.opensaml:*</include>
                                    <include>org.bouncycastle:*</include>
                                    <include>org.apache.santuario:xmlsec</include>
                                    <include>commons-logging:commons-logging</include>
                                    <include>commons-httpclient:commons-httpclient</include>
                                    <include>commons-collections:commons-collections</include>
                                    <include>commons-lang:commons-lang</include>
                                    <include>org.apache.velocity:velocity</include>
                                    <include>org.owasp.esapi:esapi</include>
                                    <include>joda-time:joda-time</include>
                                    <include>xalan:serializer</include>
                                    <include>xml-resolver:xml-resolver</include>
                                    <include>xalan:xalan</include>
                                    <include>com.madgag:scpkix-jdk15on</include>
                                    <include>com.madgag:sc-light-jdk15on</include>
                                    <include>ca.juliusdavies:not-yet-commons-ssl</include>
                                    <include>com.google.code.findbugs:annotations</include>
                                                                        <include>com.google.guava:guava:jar</include>                                    
                                    <include>org.sec2.statictestdata:*</include>
                                </includes>
                                <excludes>
                                    
                                </excludes>
                            </artifactSet>-->
                            <artifactSet>
                                <excludes>
                                    <exclude>com.google.guava:guava</exclude>
                                    <exclude>commons-codec:commons-codec</exclude>
                                    <exclude>org.slf4j:slf4j-api</exclude>
                                </excludes>
                            </artifactSet>
                            
                            
                            <filters>
                                <filter>
                                    <artifact>org.sec2.*:*</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>org.slf4j:slf4j-android</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <!--
                                <filter>
                                    <artifact>ch.qos.logback:logback-classic</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
				-->
                                <filter>
                                    <artifact>com.madgag:scprov-jdk15on</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>com.madgag:sc-light-jdk15on</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>org.opensaml:opensaml</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>org.opensaml:openws</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>joda-time:joda-time</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
<!--                                <filter>
                                    <artifact>xalan:xalan</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>xalan:serializer</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>-->
