                                    <artifact>stax:stax</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>-->
                                <filter>
                                    <artifact>xml-apis:xml-apis</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>     
                                <filter>
                                    <artifact>xerces:xercesImpl</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter> 
                                <filter>
                                    <artifact>xml-resolver:xml-resolver</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter> 
                                <filter>
                                    <artifact>commons-logging:commons-logging</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>org.bouncycastle:*</artifact>
                                    <includes>
                                        <include>**</include>
                                        <!--
                                        <include>org/bouncycastle/util/**/*</include>
                                        <include>org/bouncycastle/x509/**/*</include>
                                        <include>org/bouncycastle/asn1/**/*</include>
                                        -->
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>org.opensaml:xmltooling</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>org.apache.santuario:xmlsec</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>org.sec2.statictestdata:sec2-static-testdata</artifact>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            
                            <relocations>
                                <relocation>
                                    <pattern>javax.xml</pattern>
                                    <shadedPattern>org.sec2.extern.javax.xml</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
</project>
