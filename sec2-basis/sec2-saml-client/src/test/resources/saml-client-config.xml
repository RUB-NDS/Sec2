<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>Sec2 SAML Client test configuration</comment>
    <!-- URL of the keyserver -->
    <entry key="saml.client.keyserverURL">http://fry.nds.ruhr-uni-bochum.de:50301/sec2-keyserver/</entry>
    <!-- Seconds a response's timestamp is allowed to differ from local clock 
    For tests allow 6 months (6 months * 30 days * 24 hours * 3600 secs) -->
    <entry key="saml.client.timestampOffset">15552000</entry>
    <!-- Configuration of the recentIDs cache.
    If expireAfterWrite is set smaller than the timestampOffset (see above),
    replay attacks are possible -->
    <entry key="saml.client.recentIDsCacheConfig">expireAfterWrite=15552000s</entry>
    <!-- Configuration of the cache for users and groups. -->
    <entry key="saml.client.managersCacheConfig">expireAfterWrite=300s</entry>
    <!-- The subject of certificates generated by the client. The email address 
    is inserted into the placeholder "{0}". -->
    <entry key="saml.client.certificateSubject">C=DE,O=Sec2,localityName=Bochum,commonName=Sec2Client{0},emailAddress={0}</entry>
  
    <!-- 
    #############
    Properties only known in tests
    #############
    -->
    <!-- The delay in seconds that is allowed for timestamp tests -->
    <entry key="saml.client.test.timestampDelay">5</entry>
    <!-- The test protocol used by the test protocol handler -->
    <entry key="saml.client.test.protocol">sec2test</entry>
</properties>