<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>Sec2 SAML Client configuration</comment>
    <!-- URL of the keyserver -->
    <entry key="saml.client.keyserverURL">http://cloud.nds.ruhr-uni-bochum.de:7021/sec2-keyserver/</entry>
    <!-- Seconds a response's timestamp is allowed to differ from local clock -->
    <entry key="saml.client.timestampOffset">300</entry>
    <!-- Configuration of the recentIDs cache.
    If expireAfterWrite is set smaller than the timestampOffset (see above),
    replay attacks are possible -->
    <entry key="saml.client.recentIDsCacheConfig">expireAfterWrite=300s</entry>
    <!-- Configuration of the cache for users and groups. -->
    <entry key="saml.client.managersCacheConfig">expireAfterWrite=300s</entry>
    <!-- The subject of certificates generated by the client. The email address 
    is inserted into the placeholder "{0}"; "{1}" is replaced by "Sign"/"Enc" -->
    <entry key="saml.client.certificateSubject">C=DE,O=Sec2,localityName=Bochum,commonName=Sec2Client{0}{1},emailAddress={0}</entry>
</properties>