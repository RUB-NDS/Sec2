<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="20dip" xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="20dip">

		<ImageView android:id="@+id/wd_outer" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true" android:src="@drawable/spinner_76_outer_holo" />

		<ImageView android:id="@+id/wd_inner" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true" android:src="@drawable/spinner_76_inner_holo" />

	</RelativeLayout>

	<TextView android:id="@+id/wd_message" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" android:text="@string/waiting" android:layout_marginRight="10dip" />

</LinearLayout>